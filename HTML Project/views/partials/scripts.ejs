        const wrapper = document.querySelector('.main_content')
        oatmeal.innerHTML = `<h2>Your submission, â„–${numberOfSub}</h2>`+`<ul><li>Your email: ${text.email_user? text.email_user:'no data'}</li>` + `<li>Your comment: ${text.comment? text.comment:'no data'}</li></ul>`
